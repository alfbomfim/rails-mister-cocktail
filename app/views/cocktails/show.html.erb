<h2><%= @cocktail.name %></h2>
<ol>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>: <%= dose.description %> <small>(<%= link_to 'delete', dose_path(dose), method: 'delete' %>)</small>
  </li>
  <% end %>
</ol>
<%= link_to 'Add a dose to this cocktail', new_cocktail_dose_path(@cocktail) %>
<hr>
<%= link_to 'Back to cocktails list', root_path %>
